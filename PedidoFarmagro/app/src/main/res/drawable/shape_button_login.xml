<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <stroke android:width="1dp" android:color="@color/dark"/>
            <gradient android:startColor="@color/rojo_claro" android:endColor="@color/rojo_claro" android:angle="270"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <stroke android:width="1dp" android:color="@color/dark"/>
            <gradient android:startColor="@color/rojo_claro" android:endColor="@color/rojo_claro" android:angle="270"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <stroke android:width="1dp" android:color="@color/plomo_oscuro"/>
            <gradient android:startColor="@color/rojo_oscuro" android:endColor="@color/rojo_oscuro" android:angle="270"/>
        </shape>
    </item>
</selector>
