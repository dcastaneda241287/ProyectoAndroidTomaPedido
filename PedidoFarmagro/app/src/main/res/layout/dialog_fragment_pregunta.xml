<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/popup_ll_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="45dp"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorManatee" />

        <TextView
            android:id="@+id/tv_aceptar_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4388BD"
            android:gravity="center"
            android:padding="13dp"
            android:text="Generar y Enviar Pedido"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_multiple_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorManatee" />

            <TextView
                android:id="@+id/tv_guardar_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DF7E19"
                android:gravity="center"
                android:padding="13dp"
                android:text="Guardar en Pendiente"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_multiple_button_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorManatee" />

            <TextView
                android:id="@+id/tv_cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#77AA2E"
                android:gravity="center"
                android:padding="13dp"
                android:text="Salir"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_popup"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_circle_shape_silver"
        android:padding="0dp"
        android:src="@drawable/ic_send" />
</RelativeLayout>